# EditorConfig helps maintain consistent coding styles across different editors
# https://editorconfig.org

root = true

# All files
[*]
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# Java files
[*.java]
indent_size = 4
max_line_length = 120

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx,json}]
indent_size = 2
max_line_length = 100

# CSS files
[*.{css,scss,less}]
indent_size = 2
max_line_length = 100

# HTML files
[*.{html,xml,vue}]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2
max_line_length = 120

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Maven/Gradle files
[{pom.xml,build.gradle}]
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_size = 2
end_of_line = lf

# Makefiles
[Makefile]
indent_style = tab
